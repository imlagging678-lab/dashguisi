task.spawn(function()
    local Players = game:GetService("Players")
    local lp = Players.LocalPlayer
    local playerGui = lp:WaitForChild("PlayerGui")
    
    -- [ üõ°Ô∏è DOKUNULMAZ KATMAN OLU≈ûTURMA ]
    local protectedGui = Instance.new("ScreenGui")
    protectedGui.Name = "ProtectedMobileControls"
    protectedGui.DisplayOrder = 9999 -- En √ºst katman
    protectedGui.ResetOnSpawn = false
    protectedGui.Parent = playerGui

    -- [ üéÆ JOYSTICK VE ZIPLAMA BUTONUNU KURTARMA ]
    local function rescueControls()
        local touchGui = playerGui:FindFirstChild("TouchGui")
        if touchGui then
            touchGui.Parent = protectedGui -- Orijinal kontrolleri bizim g√ºvenli b√∂lgeye ta≈üƒ±yoruz
        end
    end

    -- [ üí® DASH BUTONU OLU≈ûTURMA ]
    local function createDash()
        if protectedGui:FindFirstChild("DashBtn") then return end
        
        local btn = Instance.new("TextButton")
        btn.Name = "DashBtn"
        btn.Size = UDim2.new(0, 80, 0, 80)
        btn.Position = UDim2.new(0.85, 0, 0.7, 0) -- Saƒü alt
        btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        btn.BackgroundTransparency = 0.3
        btn.Text = "DASH"
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.Font = Enum.Font.GothamBold
        btn.TextSize = 20
        btn.Parent = protectedGui

        -- G√∂rsel Detaylar
        local corner = Instance.new("UICorner")
        corner.CornerRadius = UDim.new(0.5, 0)
        corner.Parent = btn

        local stroke = Instance.new("UIStroke")
        stroke.Color = Color3.new(1, 1, 1)
        stroke.Thickness = 2
        stroke.Parent = btn

        local tStroke = Instance.new("UIStroke")
        tStroke.Thickness = 2
        tStroke.Color = Color3.new(0, 0, 0)
        tStroke.Parent = btn

        -- Tetikleme (PC Moduna Ge√ßmeden)
        btn.Activated:Connect(function()
            -- Bu sefer en hafif sinyali g√∂nderiyoruz
            game:GetService("VirtualInputManager"):SendKeyEvent(true, Enum.KeyCode.Q, false, game)
            task.wait(0.01)
            game:GetService("VirtualInputManager"):SendKeyEvent(false, Enum.KeyCode.Q, false, game)
        end)

        -- S√ºr√ºkleme Mantƒ±ƒüƒ±
        local dragging, dragInput, dragStart, startPos
        btn.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                dragging = true
                dragStart = input.Position
                startPos = btn.Position
            end
        end)
        btn.InputChanged:Connect(function(input)
            if (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) and dragging then
                local delta = input.Position - dragStart
                btn.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
            end
        end)
        game:GetService("UserInputService").InputEnded:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                dragging = false
            end
        end)
    end

    -- [ üîÅ S√úREKLƒ∞ KONTROL D√ñNG√úS√ú ]
    -- Script sildik√ße biz geri ta≈üƒ±yacaƒüƒ±z
    while true do
        rescueControls()
        createDash()
        task.wait(1)
    end
end)
